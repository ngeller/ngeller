.nav-sidebar-inner
  %header.nav-sidebar-header.nav-sidebar-toc-section
    %h2.nav-sidebar-title
      = link_to "#{title}", "/index.html"
    %h3.nav-sidebar-author= data.book.author_as_it_appears[0]
    %a.nav-sidebar-close{:href => "javascript:void(0)", :id => "nav-menu-close"}
      %i.ion-android-close
    %nav-sidebar-content
      %ul.nav-sidebar-toc
        - chapters.each do |chapter|
          - if chapter.data.sidebar != false
            %li= link_to chapter.title, chapter
  .nav-sidebar-downloads
    = partial "partials/formats"
  .nav-sidebar-cite
    = partial "partials/cite"
