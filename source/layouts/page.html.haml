= wrap_layout :application do
  %header.page-cover
    %h1.page-title= current_page.data.title
    - if current_page.data.subtitle
      %h2.page-subtitle= current_page.data.subtitle
    - if current_page.data.author
      %h3.page-author= current_page.data.author
  %article.page
    %main.page-content
      = yield
